<div style="width:80%;margin:0 auto;">
	<h1>Crear Articulo</h1>
	<%= form_for(@article) do |f| %>
		<% @article.errors.full_messages.each do |message| %>
		<div class="red advertencias top-space">
			* <%= message %>
		</div>
		<%end%>
		<div class="field">
			<%= f.text_field :title, placeholder: "Título", class:"form-control" %> 
		</div>
		<div class="field">
			<%= f.text_area :body, placeholder: "Escribe aquí el articulo", style:"height:250px;", class:"form-control" %>
		</div>
		<div class="field">
			<%= f.submit "Guardar", class:"btn large-padding" %>
		</div>
	<%end%>
</div>